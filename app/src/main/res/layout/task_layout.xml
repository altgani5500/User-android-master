<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linearLayoutJobList"
              android:paddingBottom="@dimen/dp_2"
              android:elevation="@dimen/dp_3"
>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            android:elevation="@dimen/dp_3"
            android:id="@+id/cardTaskList"

    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginStart="@dimen/dp_10"
                      android:layout_marginEnd="@dimen/dp_10"
                      android:paddingTop="@dimen/dp_10"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
            >

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:textSize="@dimen/sp_15"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_semibold"
                          android:textColor="@color/job_title"
                          android:id="@+id/txtEnterpriseNameTL"
                />

                <View android:layout_width="@dimen/dp_5"
                      android:layout_height="@dimen/dp_5"
                      android:id="@+id/viewTaskStatusTL"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_10"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:id="@+id/txtTaskStatusTL"
                          android:layout_marginStart="@dimen/dp_5"
                />

            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/task_name"
                      android:textSize="@dimen/sp_11"
                      android:textColor="@color/text_light"
                      android:layout_marginTop="@dimen/dp_10"
                      android:fontFamily="@font/montserrat_regular"


            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_12"
                      android:layout_marginTop="@dimen/dp_3"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_semibold"
                      android:textColor="@color/job_title"
                      android:layout_marginBottom="@dimen/dp_10"
                      android:id="@+id/txtTaskNameTL"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1"
                              android:id="@+id/llTaskTypeTL"

                >
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/task_type"
                              android:textAlignment="viewStart"
                              android:textSize="@dimen/sp_11"
                              android:textColor="@color/text_light"
                              android:layout_marginTop="@dimen/dp_10"
                              android:fontFamily="@font/montserrat_regular"


                    />
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/sp_12"
                              android:layout_marginTop="@dimen/dp_3"
                              android:textAlignment="viewStart"
                              android:fontFamily="@font/montserrat_semibold"
                              android:textColor="@color/job_title"
                              android:layout_marginBottom="@dimen/dp_10"
                              android:id="@+id/txtTaskTypeTL"
                    />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1"
                              android:id="@+id/llSchedulerTL"
                >
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/scheduler"
                              android:textAlignment="center"
                              android:textSize="@dimen/sp_11"
                              android:textColor="@color/text_light"
                              android:layout_marginTop="@dimen/dp_10"
                              android:fontFamily="@font/montserrat_regular"

                    />
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/sp_12"
                              android:textAlignment="center"
                              android:fontFamily="@font/montserrat_semibold"
                              android:textColor="@color/job_title"
                              android:layout_marginBottom="@dimen/dp_10"
                              android:layout_marginTop="@dimen/dp_3"
                              android:id="@+id/txtScheddulerTL"
                    />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1"
                              android:id="@+id/llRatingTL"
                >
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/rating"
                              android:textAlignment="viewEnd"
                              android:textSize="@dimen/sp_11"
                              android:textColor="@color/text_light"
                              android:layout_marginTop="@dimen/dp_10"
                              android:fontFamily="@font/montserrat_regular"

                    />
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/sp_12"
                              android:textAlignment="viewEnd"
                              android:fontFamily="@font/montserrat_semibold"
                              android:textColor="@color/job_title"
                              android:layout_marginBottom="@dimen/dp_10"
                              android:layout_marginTop="@dimen/dp_3"
                              android:id="@+id/txtRatingTL"
                    />

                </LinearLayout>


            </LinearLayout>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/clariifcation"
                      android:textSize="@dimen/sp_11"
                      android:textColor="@color/text_light"
                      android:layout_marginTop="@dimen/dp_10"
                      android:fontFamily="@font/montserrat_regular"
                      android:id="@+id/txtClarifyText"

            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_12"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:textColor="@color/job_title"
                      android:layout_marginBottom="@dimen/dp_10"
                      android:layout_marginTop="@dimen/dp_3"
                      android:id="@+id/txtClarificationTL"
            />



            <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:text="@string/reschedule_request"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAllCaps="false"
                android:gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:id="@+id/btnRescheduleTL"
                    android:visibility="gone"
            />
            <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textSize="@dimen/sp_12"
                android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/start_task"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:id="@+id/btnStartTL"
                    android:visibility="gone"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>