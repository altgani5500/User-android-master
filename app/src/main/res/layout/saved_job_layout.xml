            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:id="@+id/contain"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button

                        android:id="@+id/imgSavedJobUnSaveJob"

                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:background="@drawable/whiteb"
                        android:drawableLeft="@drawable/ic_baseline_star_24"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/blue"
                        android:text="@string/savedJob"
                        android:fontFamily="@font/montserrat_medium"
                        android:textAllCaps="false"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_25"
                        />





                    <Button android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/applied_button"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:text="@string/applied"
                        android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/btnUnapplySavedJobList"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_25"
                        />

                    <Button android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/whiteb_apply"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:text="@string/apply"
                        android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/btnApplySavedJobList"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_25"
                        />



                </LinearLayout>



            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>