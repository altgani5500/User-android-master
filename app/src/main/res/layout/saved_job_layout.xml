<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linearLayoutSavedJobList"
              android:paddingBottom="@dimen/dp_5"
              android:elevation="@dimen/dp_3"
>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            android:elevation="@dimen/dp_3"
    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginStart="@dimen/dp_10"
                      android:layout_marginEnd="@dimen/dp_10"
                      android:paddingTop="@dimen/dp_10"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
            >

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:textSize="@dimen/sp_15"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_semibold"
                          android:id="@+id/txtSavedJobListDesignation"
                          android:textColor="@color/job_title"
                />

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/google_map"
                           android:padding="@dimen/dp_5"
                           android:id="@+id/imgMapSavedJob"
                />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/share"
                           android:id="@+id/imgSavedShareJob"
                           android:padding="@dimen/dp_5"

                />

<!--                <ImageView android:layout_width="wrap_content"-->
<!--                           android:layout_height="wrap_content"-->
<!--                           android:src="@drawable/star_yellow"-->
<!--                           android:padding="@dimen/dp_5"-->
<!--                           android:layout_marginEnd="@dimen/dp_10"-->
<!--                           android:id="@+id/imgSavedJobUnSaveJob"/>-->


            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/company_name"
                      android:textSize="@dimen/sp_14"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_medium"
                      android:id="@+id/txtSavedJobListCompanyName"
                      android:layout_marginBottom="@dimen/dp_5"

            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/job_details"
                      android:id="@+id/txtSavedJobListLocation"
                      android:textSize="@dimen/sp_12"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:drawableStart="@drawable/branch_office"
                      android:drawablePadding="@dimen/dp_5"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/job_details"
                      android:id="@+id/txtSavedJobListService"
                      android:layout_marginTop="@dimen/dp_5"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:textSize="@dimen/sp_12"
                      android:drawableStart="@drawable/industry"
                      android:drawablePadding="@dimen/dp_5"

            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/job_details"
                      android:id="@+id/txtSavedJobListSalary"
                      android:fontFamily="@font/montserrat_regular"
                      android:drawableStart="@drawable/hourly_rate"
                      android:layout_marginTop="@dimen/dp_5"
                      android:textSize="@dimen/sp_12"
                      android:textAlignment="viewStart"
                      android:drawablePadding="@dimen/dp_5"

            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="bottom"
                          android:layout_marginTop="@dimen/dp_5"

            >
                <ImageView android:layout_width="@dimen/dp_22"
                           android:layout_height="@dimen/dp_22"
                           android:id="@+id/imgSavedJobStatus"
                           android:paddingBottom="@dimen/dp_5"

                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/job_details"
                          android:id="@+id/txtSavedJobListStatus"
                          android:textSize="@dimen/sp_12"
                          android:layout_marginStart="@dimen/dp_5"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:paddingBottom="@dimen/dp_2"


                />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/info"
                           android:padding="@dimen/dp_5"
                           android:id="@+id/imgSavedJobInfo"

                />

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="bottom"
                          android:visibility="gone"
                          android:id="@+id/llSavedJobViewedStatus"
                          android:layout_marginTop="@dimen/dp_5"

            >
                <ImageView android:layout_width="@dimen/dp_22"
                           android:layout_height="@dimen/dp_22"
                           android:id="@+id/imgSavedJobViewedStatus"
                           android:paddingBottom="@dimen/dp_5"

                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/job_details"
                          android:id="@+id/txtSavedJobListViewedStatus"
                          android:textSize="@dimen/sp_12"
                          android:layout_marginStart="@dimen/dp_5"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:paddingBottom="@dimen/dp_2"


                />
            </LinearLayout>

