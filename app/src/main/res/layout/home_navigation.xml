<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="@dimen/dp_240"
        android:background="@color/white"
>
    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
        >

            <ImageView android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:id="@+id/imgCrossHomeNavigation"
                       android:src="@drawable/cancel"
                       android:layout_marginTop="@dimen/dp_10"
            />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp_10"
                              android:layout_marginEnd="@dimen/dp_10"
                              android:orientation="horizontal"
                              android:id="@+id/llUserProfile"
                              android:gravity="center"
                >
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            app:civ_border_width="@dimen/dp_1"
                            app:civ_border_color="@color/view_color"
                            android:src="@drawable/profile_placeholder"
                            android:id="@+id/imgHomeNavigationPic"
                    />

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_marginStart="@dimen/dp_10"
                                  android:orientation="vertical"
                                  android:gravity="center_vertical"
                    >

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_15"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_semibold"
                                  android:id="@+id/txtHomeNavigtionName"
                                  android:textColor="@color/black"

                        />
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_13"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_medium"
                                  android:id="@+id/txtHomeNaviationCompany"
                                  android:textColor="@color/lightGrey"
                                  android:layout_marginTop="@dimen/dp_3"
                        />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp_10"
                              android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                              android:orientation="vertical"
                              android:visibility="gone"
                              android:id="@+id/llHomeNavigationLogin"
                >

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/sp_12"
                              android:textAlignment="center"
                        android:layout_gravity="center"
                              android:fontFamily="@font/montserrat_regular"
                              android:text="@string/login_msg"
                              android:textColor="@color/black"

                    />

  <LinearLayout
      android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/sp_80"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/whiteb"
                        android:text="@string/loginButton"
                        android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/loginnavigation"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_2"
                        />

                    <Button
                        android:layout_width="@dimen/sp_80"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:text="@string/register"
                        android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/registerNavigation"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginRight="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_2"
                      />
  </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginTop="@dimen/dp_10"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_15"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/llSavedJobs"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/star_yellow"
                />


                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/saved_job"
                          android:textAlignment="viewStart"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginBottom="@dimen/dp_5"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_marginTop="@dimen/dp_5"
                          android:id="@+id/llScheduleTask"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/schedule"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/schedule_task"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/llTimeLog"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/timelogs"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/time_logs"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:id="@+id/llNotifications"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/notification"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/notifications"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />
                <TextView android:layout_width="@dimen/dp_15"
                          android:layout_height="@dimen/dp_15"
                          android:background="@drawable/message_drawable"
                          android:layout_marginStart="@dimen/dp_8"
                          android:textColor="@color/white"
                          android:textSize="@dimen/sp_10"
                          android:fontFamily="@font/montserrat_regular"
                          android:gravity="center"
                          android:visibility="gone"
                          android:id="@+id/txtHomeNotificationCount"

                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:id="@+id/llMessageHome"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/message"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/message"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

                <TextView android:layout_width="@dimen/dp_15"
                          android:layout_height="@dimen/dp_15"
                          android:background="@drawable/message_drawable"
                          android:layout_marginStart="@dimen/dp_8"
                          android:textColor="@color/white"
                          android:textSize="@dimen/sp_10"
                          android:fontFamily="@font/montserrat_regular"
                          android:gravity="center"
                          android:visibility="gone"
                          android:id="@+id/txtHomeMsgCount"

                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/llSettings"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/settings"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/settings"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/llHistory"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/my_histroy"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/my_history"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"
            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/llAboutUs"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/about_us"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:textAlignment="viewStart"
                          android:text="@string/about_us"
                          android:fontFamily="@font/montserrat_regular"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"></View>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/ContactCall"
                >

                <ImageView android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/contact_us"
                    />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:text="@string/callus"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dp_15"
                    />

            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_color"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5">

            </View>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/llContactUs"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                    android:src="@drawable/about_us"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:text="@string/send"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

            </LinearLayout>




            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginStart="@dimen/dp_35"
                  android:layout_marginTop="@dimen/dp_5"
                  android:layout_marginBottom="@dimen/dp_5"
            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_40"
                          android:layout_marginTop="@dimen/dp_5"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:id="@+id/llLogout"
                          android:layout_marginBottom="@dimen/dp_10"
            >

                <ImageView android:layout_width="@dimen/dp_20"
                           android:layout_height="@dimen/dp_20"
                           android:src="@drawable/logout"
                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_13"
                          android:fontFamily="@font/montserrat_regular"
                          android:text="@string/logout"
                          android:textAlignment="viewStart"
                          android:textColor="@color/black"
                          android:layout_marginStart="@dimen/dp_15"
                />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>