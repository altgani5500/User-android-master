<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:orientation="horizontal"
            android:elevation="@dimen/dp_3"
            android:gravity="center_vertical"
    >

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/black_back"
                   android:layout_marginStart="@dimen/dp_10"
                   android:padding="@dimen/dp_5"
                   android:id="@+id/imgBackStateFilters"
        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_marginStart="@dimen/dp_5"
                      android:layout_marginEnd="@dimen/dp_5"
                      android:background="@drawable/search_bg"
                      android:gravity="center"
                      android:layout_marginTop="@dimen/dp_5"
                      android:layout_marginBottom="@dimen/dp_5"
                      android:paddingEnd="@dimen/dp_10"
        >

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/search_black"
                       android:layout_marginStart="@dimen/dp_10"
            />
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="@dimen/dp_5"
                      android:layout_marginStart="@dimen/dp_5"
                      android:background="@null"
                      android:textSize="@dimen/sp_12"
                      android:maxLines="1"
                      android:singleLine="true"
                      android:textColor="@color/text_light"
                      android:hint="@string/search"
                      android:imeOptions="actionDone"
                      android:id="@+id/edtSearchState"
            />

        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/text_bg"
                  android:textAlignment="viewStart"
                  android:textSize="@dimen/sp_12"
                  android:fontFamily="@font/montserrat_regular"
                  android:text="@string/reset"
                  android:id="@+id/txtResetState"
                  android:layout_marginStart="@dimen/dp_10"
                  android:layout_marginEnd="@dimen/dp_10"
                  android:padding="@dimen/dp_5"

        />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/recyclerStateFilter"
            android:layout_marginTop="@dimen/dp_10"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/llErrorState"
                  android:gravity="center"
                  android:visibility="gone"

    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/sp_15"
                  android:textAlignment="viewStart"
                  android:text="@string/no_internet"
        />

        <Button android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/button_background"
                android:text="@string/retry"
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/btnRetryState"
                android:layout_marginTop="@dimen/dp_35"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_10"
        />
    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="@string/apply_filter"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/btnApplyState"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
    />


</LinearLayout>