<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:elevation="@dimen/dp_3"
            android:gravity="center_vertical"
            android:id="@+id/llHeaderTaskDetail"
    >

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/black_back"
                   android:layout_marginStart="@dimen/dp_10"
                   android:padding="@dimen/dp_5"
                   android:id="@+id/imgBackTaskDetail"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/sp_16"
                  android:textAlignment="viewStart"
                  android:text="@string/task_detail"
                  android:fontFamily="@font/montserrat_semibold"
                  android:textColor="@color/black"
                  android:layout_marginStart="@dimen/dp_10"
        />

    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/llHeaderTaskDetail"
    >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/llTaskDetails"
                android:visibility="gone"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_20"
                    android:padding="@dimen/dp_15"
                    android:orientation="vertical"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:textColor="@color/text_light"
                          android:textSize="@dimen/sp_11"
                    android:layout_weight="1"
                          android:text="@string/enterprise_name"
                          android:fontFamily="@font/montserrat_regular"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar_task"
                    android:id="@+id/imgSaveTaskCalendar"

                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/text_bg"
                            android:layout_marginTop="@dimen/dp_3"
                            android:fontFamily="@font/montserrat_semibold"
                            android:id="@+id/txtEnterpriseNameTaskDetail"

                    />


                </LinearLayout>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/text_light"
                          android:textSize="@dimen/sp_11"
                          android:text="@string/task_name"
                          android:layout_marginTop="@dimen/dp_15"
                          android:fontFamily="@font/montserrat_regular"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text_bg"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@font/montserrat_semibold"
                        android:id="@+id/txtTaskNameTaskDetail"

                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/text_light"
                          android:textSize="@dimen/sp_11"
                          android:text="@string/task_type"
                          android:layout_marginTop="@dimen/dp_15"
                          android:fontFamily="@font/montserrat_regular"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text_bg"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:id="@+id/txtTaskTypeTaskDetail"

                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15"


            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/text_bg"
                          android:textSize="@dimen/sp_13"
                          android:text="@string/description"
                          android:layout_marginTop="@dimen/dp_5"
                          android:fontFamily="@font/montserrat_semibold"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/text_light"
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/txtDescriptionTaskDetail"

                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15"
            >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"

                >
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="@string/execution_date_time"
                              android:textSize="@dimen/sp_11"
                              android:textColor="@color/text_light"
                              android:fontFamily="@font/montserrat_regular"
                              android:id="@+id/txtExecutionText"

                    />


                    <View android:layout_width="@dimen/dp_5"
                          android:layout_height="@dimen/dp_5"
                          android:background="@drawable/green_circle"
                          android:id="@+id/viewTaskStatusTaskDetail"
                    />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/sp_10"
                              android:fontFamily="@font/montserrat_regular"
                              android:id="@+id/txtTaskStatusTaskDetail"
                              android:layout_marginStart="@dimen/dp_5"
                    />

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text_bg"
                        android:fontFamily="@font/montserrat_semibold"
                        android:id="@+id/txtExecutionTimeTaskDetail"

                />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="@string/creation_date_time"
                          android:textSize="@dimen/sp_11"
                          android:textColor="@color/text_light"
                          android:fontFamily="@font/montserrat_regular"
                          android:layout_marginTop="@dimen/dp_15"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text_bg"
                        android:fontFamily="@font/montserrat_semibold"
                        android:id="@+id/txtCreationTimeTaskDetail"

                />

                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:text="@string/reschedule_request"
                        android:fontFamily="@font/montserrat_medium"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/dp_35"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:visibility="gone"
                        android:id="@+id/btnOneTaskDetails"


                />
                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:text="@string/done"
                        android:fontFamily="@font/montserrat_medium"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:visibility="gone"
                        android:id="@+id/btnTwoTaskDetails"

                />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/llErrorJobList"
                  android:gravity="center"
                  android:visibility="gone"

    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/sp_15"
                  android:id="@+id/txtNoInternetTaskDetail"
                  android:textAlignment="center"
                  android:layout_marginEnd="@dimen/dp_20"
                  android:layout_marginStart="@dimen/dp_20"
                  android:text="@string/no_internet"
        />

        <Button android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/button_background"
                android:text="@string/retry"
                android:fontFamily="@font/montserrat_medium"
                android:id="@+id/btnRetryTaskDetail"
                android:layout_marginTop="@dimen/dp_35"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_10"
        />

    </LinearLayout>

</RelativeLayout>