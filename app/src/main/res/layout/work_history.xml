<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dp_5"

>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"

    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
        >

            <ImageView android:layout_width="@dimen/dp_25"
                       android:layout_height="@dimen/dp_25"
                       android:id="@+id/imgEnterpriseLogoTimeLog"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_bg"
                      android:textSize="@dimen/sp_15"
                      android:fontFamily="@font/montserrat_semibold"
                      android:layout_marginStart="@dimen/dp_5"
                      android:layout_toEndOf="@id/imgEnterpriseLogoTimeLog"
                      android:id="@+id/txtDesignationTimeLog"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_light"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginTop="@dimen/dp_5"
                      android:fontFamily="@font/montserrat_regular"
                      android:layout_marginStart="@dimen/dp_5"
                      android:layout_toEndOf="@id/imgEnterpriseLogoTimeLog"
                      android:layout_below="@id/txtDesignationTimeLog"
                      android:id="@+id/txtEnterpriseTimeLog"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_light"
                      android:textSize="@dimen/sp_12"
                      android:layout_marginTop="@dimen/dp_10"
                      android:text="@string/actual_schedule"
                      android:fontFamily="@font/montserrat_regular"
                      android:layout_marginStart="@dimen/dp_5"
                      android:layout_toEndOf="@id/imgEnterpriseLogoTimeLog"
                      android:layout_below="@id/txtEnterpriseTimeLog"
                      android:id="@+id/txtActucalScheduleText"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_bg"
                      android:textSize="@dimen/sp_13"
                      android:fontFamily="@font/montserrat_semibold"
                      android:layout_marginStart="@dimen/dp_5"
                      android:layout_toEndOf="@id/imgEnterpriseLogoTimeLog"
                      android:layout_below="@id/txtActucalScheduleText"
                      android:id="@+id/txtActualScheduleData"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_bg"
                      android:textSize="@dimen/sp_13"
                      android:layout_marginTop="@dimen/dp_10"
                      android:fontFamily="@font/montserrat_regular"
                      android:layout_marginStart="@dimen/dp_5"
                      android:layout_toEndOf="@id/imgEnterpriseLogoTimeLog"
                      android:layout_below="@id/txtActualScheduleData"
                      android:id="@+id/txtDateTimeLog"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:layout_marginTop="@dimen/dp_10"
                  android:background="@color/view_color"
                  android:layout_below="@id/txtDateTimeLog"
                  android:id="@+id/viewTimeLog"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/text_bg"
                      android:fontFamily="@font/montserrat_semibold"
                      android:layout_below="@id/viewTimeLog"
                      android:layout_toEndOf="@id/imgEnterpriseLogoTimeLog"
                      android:layout_marginTop="@dimen/dp_10"
                      android:id="@+id/txtHoursTimeLog"

            />


            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:text="@string/registeration_request"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_below="@id/txtHoursTimeLog"
                    android:id="@+id/btnResignationTimeLog"

            />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>