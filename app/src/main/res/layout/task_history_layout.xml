<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linearLayoutJobList"
              android:paddingBottom="@dimen/dp_2"
              android:elevation="@dimen/dp_3"
>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            android:elevation="@dimen/dp_3"

    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginStart="@dimen/dp_10"
                      android:layout_marginEnd="@dimen/dp_10"
                      android:paddingTop="@dimen/dp_10"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
            >

                <TextView android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_14"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_semibold"
                          android:textColor="@color/job_title"
                          android:id="@+id/txtJobTitleTaskHLayout"
                />

                <View android:layout_width="@dimen/dp_5"
                      android:layout_height="@dimen/dp_5"
                      android:background="@drawable/green_circle"
                      android:id="@+id/viewTaskStatusTHL"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="@dimen/dp_5"
                          android:textSize="@dimen/sp_10"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:id="@+id/txtTaskStatusTHL"
                />

            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/task_name"
                      android:textSize="@dimen/sp_12"
                      android:textColor="@color/text_light"
                      android:layout_marginTop="@dimen/dp_10"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_13"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:textColor="@color/job_title"
                      android:layout_marginBottom="@dimen/dp_10"
                      android:id="@+id/txtTaskNameTHL"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1"
                              android:id="@+id/llTaskTypeTHL"

                >
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/task_type"
                              android:textSize="@dimen/sp_12"
                              android:textColor="@color/text_light"
                              android:layout_marginTop="@dimen/dp_10"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/sp_13"
                              android:textAlignment="viewStart"
                              android:fontFamily="@font/montserrat_regular"
                              android:textColor="@color/job_title"
                              android:layout_marginBottom="@dimen/dp_10"
                              android:id="@+id/txtTaskTypeTHL"
                    />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>