<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@drawable/register_bg"
        android:orientation="vertical"

>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/back"
               android:layout_marginStart="@dimen/dp_15"
               android:layout_marginTop="@dimen/dp_80"
               android:id="@+id/imgBackRegister"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_70"
    >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"

        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_18"
                      android:textAlignment="viewStart"
                      android:text="@string/register_header"
                      android:fontFamily="@font/montserrat_bold"
                      android:textColor="@color/blue"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/blue"
                      android:textSize="@dimen/sp_17"
                      android:text="@string/register"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_semibold"

            />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_10"

            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:layout_marginTop="@dimen/dp_50"
                              android:paddingStart="@dimen/dp_10"
                              android:paddingEnd="@dimen/dp_10"
                              android:layout_marginBottom="@dimen/dp_15"
                              android:background="@drawable/register_background"
                >

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:layout_marginTop="@dimen/dp_50"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_12"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:hint="@string/first_name"
                                  android:textAlignment="viewStart"
                                  android:inputType="textCapWords"
                                  android:id="@+id/edtFirstName"
                                  android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                  android:lines="1"
                                  android:maxLines="1"
                                  android:singleLine="true"
                                  android:maxLength="30"
                                  android:drawableStart="@drawable/username"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:background="@null"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:imeOptions="actionNext"
                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_12"
                                  android:hint="@string/last_name"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:inputType="textCapWords"
                                  android:lines="1"
                                  android:maxLines="1"
                                  android:singleLine="true"
                                  android:textAlignment="viewStart"
                                  android:maxLength="30"
                                  android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                  android:id="@+id/edtLastName"
                                  android:drawableStart="@drawable/username"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:background="@null"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:imeOptions="actionNext"

                        />

                    </LinearLayout>

                    <RadioGroup android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:id="@+id/genderRadioGroup"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:orientation="horizontal"
                    >

                        <RadioButton android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_weight="1"
                                     android:text="@string/male"
                                     android:textAlignment="viewStart"
                                     android:textSize="@dimen/sp_12"
                                     android:fontFamily="@font/montserrat_regular"
                                     android:id="@+id/radioBtnMale"
                        />
                        <RadioButton android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_weight="1"
                                     android:textSize="@dimen/sp_12"
                                     android:textAlignment="viewStart"
                                     android:fontFamily="@font/montserrat_regular"
                                     android:text="@string/female"
                                     android:id="@+id/radioBtnFemale"
                        />

                    </RadioGroup>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:id="@+id/llNationality"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:textSize="@dimen/sp_12"
                                  android:textAlignment="viewStart"
                                  android:hint="@string/nationality"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:lines="1"
                                  android:drawableStart="@drawable/nationality"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:id="@+id/edtNationality"
                                  android:background="@null"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:imeOptions="actionNext"


                        />

                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/dropdown"
                                   android:id="@+id/imgNationalityDropDown"
                                   android:padding="@dimen/dp_5"
                                   android:layout_marginEnd="@dimen/dp_2"
                        />


                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_12"
                                  android:maxLines="1"
                                  android:singleLine="true"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:hint="@string/national_id"
                                  android:digits="0123456789"
                                  android:maxLength="10"
                                  android:inputType="number"
                                  android:id="@+id/edtNationalId"
                                  android:drawableStart="@drawable/national_id"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:background="@null"
                                  android:imeOptions="actionNext"
                        />

                    </LinearLayout>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp_3"
                              android:textSize="@dimen/sp_10"
                              android:textAlignment="viewStart"
                              android:fontFamily="@font/montserrat_regular"
                              android:textColor="@color/applied_color"
                              android:text="@string/note"
                              android:layout_marginBottom="@dimen/dp_3"
                    />

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_12"
                                  android:hint="@string/email"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:id="@+id/edtEmailId"
                                  android:textAlignment="viewStart"
                                  android:lines="1"
                                  android:inputType="textEmailAddress"
                                  android:drawableStart="@drawable/email_id"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:background="@null"
                                  android:imeOptions="actionNext"

                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_12"
                                  android:hint="@string/username"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:id="@+id/edtUserName"
                                  android:maxLength="50"
                                  android:maxLines="1"
                                  android:singleLine="true"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:drawableStart="@drawable/username"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:background="@null"
                                  android:imeOptions="actionNext"
                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_12"
                                  android:hint="@string/password"
                                  android:id="@+id/edtPassword"
                                  android:lines="1"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:inputType="textPassword"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:drawableStart="@drawable/password_gray"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:background="@null"
                                  android:imeOptions="actionNext"
                        />
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_40"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:background="@drawable/register_background"
                                  android:gravity="center_vertical"
                                  android:orientation="horizontal"
                    >

                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_12"
                                  android:id="@+id/edtConfirmPassword"
                                  android:layout_marginStart="@dimen/dp_8"
                                  android:lines="1"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:inputType="textPassword"
                                  android:hint="@string/confirm_password"
                                  android:drawableStart="@drawable/password_gray"
                                  android:drawablePadding="@dimen/dp_10"
                                  android:background="@null"
                                  android:imeOptions="actionDone"
                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_30"
                                  android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  android:layout_marginTop="@dimen/dp_5"

                    >
                        <CheckBox android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/checkBoxConfirmation"
                                  android:padding="@dimen/dp_5"
                        />
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_10"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:textColor="@color/lightGrey"
                                  android:text="@string/comfirmation"
                        />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dp_30"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"

                    >
                        <CheckBox android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/checkBoxAgreement"
                                  android:padding="@dimen/dp_5"
                        />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_10"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:textColor="@color/lightGrey"
                                  android:text="@string/agreement"
                        />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textSize="@dimen/sp_10"
                                  android:id="@+id/txtTermsNconditions"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:textColor="@color/blue"
                                  android:text="@string/terms_conditions"
                                  android:layout_marginStart="@dimen/dp_2"
                        />

                    </LinearLayout>

                    <Button android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background"
                            android:text="@string/submits"
                            android:textAllCaps="false"
                            android:fontFamily="@font/montserrat_medium"
                            android:id="@+id/btnRegisterSubmit"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_18"
                            android:layout_marginBottom="@dimen/dp_25"
                    />

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/dp_10"
                                  android:gravity="center"
                    >
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/black"
                                  android:textSize="@dimen/sp_11"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:text="@string/already_account"

                        />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/blue"
                                  android:textSize="@dimen/sp_11"
                                  android:textAlignment="viewStart"
                                  android:fontFamily="@font/montserrat_regular"
                                  android:id="@+id/txtLoginHere"
                                  android:text="@string/login_here"
                                  android:layout_marginStart="@dimen/dp_2"

                        />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout android:layout_width="@dimen/dp_105"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/dp_105"
                                android:layout_centerHorizontal="true"
                >

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgUserProfilePicture"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            app:civ_border_width="@dimen/dp_1"
                            app:civ_border_color="@color/view_color"
                            android:src="@drawable/profile_placeholder"
                    />

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/imgEditProfilePic"
                               android:layout_alignParentTop="true"
                               android:layout_marginTop="@dimen/dp_20"
                               android:layout_alignParentEnd="true"
                               android:src="@drawable/add_image"

                    />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
