<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/job_details"

>
    <ImageView android:layout_width="@dimen/dp_25"
               android:layout_height="@dimen/dp_25"
               android:layout_alignParentEnd="true"
               android:src="@drawable/white_cross"
               android:tint="@color/white"
               android:layout_marginTop="@dimen/dp_15"
               android:layout_marginEnd="@dimen/dp_15"
               android:padding="@dimen/dp_5"
               android:id="@+id/btnCancleViewpagerDialog"
    />

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerDialog"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_180"
            android:layout_marginBottom="@dimen/dp_180"

    />

</RelativeLayout>