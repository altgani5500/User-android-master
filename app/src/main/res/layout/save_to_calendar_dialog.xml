<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:layout_marginEnd="@dimen/dp_15"
              android:elevation="@dimen/dp_3"
              android:background="@drawable/dialog_bg"
>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dp_10"

    >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:fontFamily="@font/montserrat_semibold"
                  android:textSize="@dimen/sp_16"
                  android:text="@string/calendar"
                  android:textColor="@color/text_bg"
                  android:layout_marginTop="@dimen/dp_15"
                  android:id="@+id/txtTitleCalDialog"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/dp_10"
                  android:layout_marginStart="@dimen/dp_10"
                  android:layout_marginTop="@dimen/dp_25"
                  android:textAlignment="center"
                  android:fontFamily="@font/montserrat_regular"
                  android:layout_below="@id/txtTitleCalDialog"
                  android:id="@+id/txtSaveToCalDialog"

        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/dp_25"
                      android:layout_marginBottom="@dimen/dp_15"
                      android:layout_below="@id/txtSaveToCalDialog"
        >

        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:textColor="@color/logout_btn_color"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_5"
                android:textAllCaps="false"
                android:text="@string/cancel"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/logout_button"
                android:id="@+id/btnCancleSaveToCal"

        />
        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="@string/save_to_calendar"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/button_background"
                android:textAllCaps="false"
                android:textSize="@dimen/sp_12"
                android:id="@+id/btSaveToCalDialog"
        />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>