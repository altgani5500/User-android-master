<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginStart="@dimen/dp_10"
              android:layout_marginEnd="@dimen/dp_10"
              android:paddingTop="@dimen/dp_5"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/dp_3"
            app:cardCornerRadius="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_25"

    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingStart="@dimen/dp_10"
                      android:paddingEnd="@dimen/dp_10"
                      android:layout_marginTop="@dimen/dp_15"
                      android:layout_marginBottom="@dimen/dp_15"
        >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
            >
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:textAlignment="viewStart"
                          android:textSize="@dimen/sp_14"
                          android:fontFamily="@font/montserrat_medium"
                          android:textColor="@color/text_bg"
                          android:text="@string/enterprise_detail"
                />
                <ImageView android:layout_width="@dimen/dp_30"
                           android:layout_height="@dimen/dp_30"
                           android:layout_marginEnd="@dimen/dp_10"
                           android:id="@+id/imgJdEnterpriseLogo"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/view_color"
                  android:layout_marginTop="@dimen/dp_15"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_marginTop="@dimen/dp_15"
            >
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:textSize="@dimen/sp_11"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:textColor="@color/text_bg"
                          android:text="@string/enterprise_name"

                />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="@dimen/dp_10"
                           android:src="@drawable/chat"
                           android:id="@+id/imgChatJd"
                />
            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_13"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:id="@+id/txtJdenterpriseName"
                      android:textColor="@color/text_light"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/dp_15"
                      android:textSize="@dimen/sp_11"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:textColor="@color/text_bg"
                      android:text="@string/enterprise_category"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_13"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:id="@+id/txtJdEnterpriseCategory"
                      android:textColor="@color/text_light"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/dp_15"
                      android:textSize="@dimen/dp_11"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:textColor="@color/text_bg"
                      android:text="@string/enolled_partime_workers"
                      android:id="@+id/txtEnrolledWorkersJd"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_13"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:id="@+id/txtJdEnrolledPartTImeWorkers"
                      android:textColor="@color/text_light"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/dp_15"
                      android:textSize="@dimen/sp_11"
                      android:textAlignment="viewStart"
                      android:fontFamily="@font/montserrat_regular"
                      android:textColor="@color/text_bg"
                      android:text="@string/general_info"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/montserrat_regular"
                      android:id="@+id/txtJdGeneralInfo"
                      android:textAlignment="viewStart"
                      android:textColor="@color/text_light"

            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="@dimen/dp_15"
                          android:gravity="center_vertical"
            >
                <ImageView android:layout_width="@dimen/dp_22"
                           android:layout_height="@dimen/dp_22"
                           android:id="@+id/imgStatusJd"
                           android:paddingBottom="@dimen/dp_5"

                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_11"
                          android:textAlignment="viewStart"
                          android:fontFamily="@font/montserrat_regular"
                          android:id="@+id/txtJdCredited"
                          android:textColor="@color/text_light"
                          android:layout_marginStart="@dimen/dp_10"
                          android:layout_marginEnd="@dimen/dp_5"
                />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/info"
                           android:padding="@dimen/dp_5"
                           android:id="@+id/imgInfoJd"

                />

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:text="@string/apply"
                        android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/btnApplyJd"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_25"
                />
                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/applied_button"
                        android:textSize="@dimen/sp_18"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:text="@string/applied"
                        android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/btnUnapplyJd"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_25"
                />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>