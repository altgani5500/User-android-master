<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:layout_marginEnd="@dimen/dp_15"
              android:elevation="@dimen/dp_3"
              android:background="@drawable/dialog_bg"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="@dimen/dp_10"
    >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/dp_10"
                  android:layout_marginStart="@dimen/dp_10"
                  android:layout_marginTop="@dimen/dp_15"
                  android:textAlignment="center"
                  android:id="@+id/txtInfoDialog"
            android:textSize="@dimen/dp_15"
            android:text="@string/TextOk"
                  android:fontFamily="@font/montserrat_regular"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCanclInfoDialog"
                android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:background="@drawable/whiteb"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/notAgree"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_13" />

            <Button
                android:id="@+id/btnOkInfoDialog"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_35"
                android:background="@drawable/whiteb_apply"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/agree"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>